doctype html
html
    head
        title Express and puggify
        link(rel="stylesheet", href="/static/style.css")
    body
        div#index.container
            H1 Hello #{user}
            p welcome to this sunny #{today}
            h2 today we are selling the following:
            ul
                each product in products
                    p
                        li the awesome: #{product.name}
                        li its only #{product.price} roepies
            h2 The Guestbook
            p because we like it like shit if you send us a messagge :)
            span#feedback
            form(id="guestbook" action="/api" method="post")
                input(type="text", name="name", placeholder="Your Name")
                textarea(name="messagge", placeholder="Your mesagge")
                input(type="submit")
        script(src="/static/jquery.js")
        script(src="/static/custom.js")
